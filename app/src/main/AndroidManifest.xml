<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.merkle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Merkle"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Merkle"
        android:usesCleartextTraffic="true">

        <!--Splash & Login-->
        <activity
            android:name="com.merkle.UI.Landing.SplashActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.merkle.UI.Landing.LoginActivity" />

        <!--Main-->
        <activity android:name="com.merkle.UI.Main.HomeActivity" />
        <activity android:name="com.merkle.UI.Main.DetailActivity" />
        <activity android:name="com.merkle.UI.Main.UserActivity" />

    </application>
</manifest>